<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <properties resource="jdbc.properties"/>
    <typeAliases>
        <!--        <typeAlias type="com.qing.entity.Student" alias="Student"/>-->
        <package name="com.qing.entity"/>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="com/qing/dao/StudentMapper.xml"/>
        <mapper resource="com/qing/dao/ClassMapper.xml"/>
        <mapper resource="com/qing/dao/EmployeeMapper.xml"/>
        <mapper resource="com/qing/dao/CourseMapper.xml"/>
    </mappers>
</configuration>